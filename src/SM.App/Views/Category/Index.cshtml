@model IEnumerable<CategoryViewModel>

@{
    ViewData["Title"] = "Loja Inspiração";
}

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Lista de Categorias</h3>
                    <div style="text-align:right; margin-top: 10px">
                        <a asp-controller="Category" asp-action="Create" class="btn btn-success"> Novo Cadastro</a>
                    </div>
                </div>
            </div>
            <div class="card">

                <!-- /.card-header -->
                <div class="card-body p-0">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th style="width: 22%; display:none">#</th>
                                <th style="width: 73%">@Html.DisplayNameFor(model => model.Description)</th>
                                <th style="width: 5%">Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if(Model !=null){
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td style="width: 22%; display:none">
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Description)
                                        </td>
                                        <td>
                                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id">
                                                <i class="bi bi-pencil-square btn btn-primary" aria-hidden="true" title="Editar"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                             }

                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->

        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>


