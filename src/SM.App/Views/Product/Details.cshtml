@model ProductViewModel
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Horizontal Form -->
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Detalhes de Produto</h3>
                </div>
                    <div class="card-body">
                        <div class="form-group row">
                            <label asp-for="Id" class="col-sm-2 col-form-label">Id</label>
                            <div class="col-sm-10">
                                @Html.DisplayFor(model => model.Id)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="SupplierId" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                @Html.DisplayFor(model => model.ResponseSupplierOut.CorporateName)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="CategoryId" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                            @Html.DisplayFor(model => model.ResponseCategoryOut.Description)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                @Html.DisplayFor(model => model.Description)
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="PurchaseValue" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-4">
                                @Html.DisplayFor(model => model.PurchaseValue)
                            </div>
                        </div>

                    <div class="form-group row">
                        <label asp-for="ProfitMargin" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-4">
                            @Html.DisplayFor(model => model.ProfitMargin)
                        </div>
                    </div>

                        <div class="form-group row">
                            <label asp-for="SaleValue" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-4">
                                @Html.DisplayFor(model => model.SaleValue)
                            </div>
                        </div>

                    <div class="form-group row">
                        <label asp-for="Stock" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-4">
                            @Html.DisplayFor(model => model.Stock)
                        </div>
                    </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                    <a asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id">
                        <i class="bi bi-pencil-square btn btn-primary" aria-hidden="true" title="Editar"></i>
                    </a>
                    <a asp-action="Index" class="btn btn-default float-right">Voltar</a>
                    </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>
</div>
