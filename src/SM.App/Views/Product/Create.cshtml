@model SM.Integration.Application.ViewModels.ProductViewModel



<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- Horizontal Form -->
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title">Cadastro de Produto</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form asp-controller="Product" asp-action="Create" class="form-horizontal" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="card-body">
                        <div class="form-group row d-none">
                            <label asp-for="Id" class="col-sm-2 col-form-label">Id</label>
                            <div class="col-sm-10">
                                <input asp-for="Id" class="form-control" placeholder="Id">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="SupplierId" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="SupplierId" class="form-control" placeholder="Fornecedor">
                                <span asp-validation-for="SupplierId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="CategoryId" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="CategoryId" class="form-control" placeholder="Categoria">
                                <span asp-validation-for="CategoryId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Name" class="form-control" placeholder="Nome do Produto">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Description" class="form-control" placeholder="Descrição">
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="PurchaseValue" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="PurchaseValue" class="form-control" placeholder="Preço de Compra">
                                <span asp-validation-for="PurchaseValue" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="SaleValue" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="SaleValue" class="form-control" placeholder="Preço de Venda">
                                <span asp-validation-for="SaleValue" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="ProfitMargin" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="ProfitMargin" class="form-control" placeholder="Margem de Lucro">
                                <span asp-validation-for="ProfitMargin" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Stock" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Stock" class="form-control" placeholder="Estoque">
                                <span asp-validation-for="Stock" class="text-danger"></span>
                            </div>
                        </div>

                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer">
                        <button type="submit" class="btn btn-info">Salvar</button>
                        <a asp-action="Index" class="btn btn-default float-right">Voltar</a>
                    </div>
                    <!-- /.card-footer -->
                </form>
            </div>
            <!-- /.card -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
